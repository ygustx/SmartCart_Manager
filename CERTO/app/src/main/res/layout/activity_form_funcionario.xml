<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormFuncionario">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="159dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toTopOf="@+id/buttoncadastrarfuncio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453"
        app:srcCompat="@drawable/cara" />

    <TextView
        android:id="@+id/textViewDashEstoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="25"
        android:text="FUNCIONÁRIOS"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttoncadastrarfuncio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttoncadastrarfuncio"
        android:layout_width="319dp"
        android:layout_height="91dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="368dp"
        android:background="@drawable/button_orange"
        android:onClick="IncluirFuncionario"
        android:padding="1dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="25"
        android:text="Incluir Funcionário"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonListarfuncio"
        android:layout_width="319dp"
        android:layout_height="92dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/button_orange"
        android:onClick="ListarFuncionario"
        android:padding="1dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="25"
        android:text="listar Funcionário"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonfuncionario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncadastrarfuncio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonfuncionario"
        android:layout_width="319dp"
        android:layout_height="91dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button_orange"
        android:onClick="estoqueSair"
        android:padding="1dp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="25"
        android:text="sair"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>